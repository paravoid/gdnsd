
options => {
  listen => @dns_lspec@
  http_listen => @http_lspec@
  dns_port => @dns_port@
  http_port => @http_port@
  plugin_search_path = @pluginpath@
  realtime_stats = true
}

service_types => {
    www_extraport => {
        plugin = tcp_connect
        port = @extra_port@
        up_thresh = 15
        timeout = 1
    }
}

plugins => {
  multifo => {
    service_types => www_extraport,
    # should return all 4, all down
    multi_4dead => {
      one = 192.0.2.1
      two = 192.0.2.2
      three = 192.0.2.3
      four = 192.0.2.4
    }
    # should return just the up-address
    multi_3dead_lowthresh => {
      up_thresh => 0.2 # -> 0.8/4 -> 1/4
      one = 192.0.2.1
      two = 192.0.2.2
      three = 192.0.2.3
      four = 127.0.0.1
    }
    # should return all 4, because 1/4 up and looking for 2+ (up_thresh 0.5)
    multi_3dead_normal => {
      one = 192.0.2.1
      two = 192.0.2.2
      three = 192.0.2.3
      four = 127.0.0.1
    }
  }
  # as last two cases above, for plugin_weighted
  weighted => {
    service_types => www_extraport,
    w_low => {
      up_thresh => 0.2
      multi => true
      one = [ 192.0.2.1, 10 ]
      two = [ 192.0.2.2, 10 ]
      three = [ 192.0.2.3, 10 ]
      four = [ 127.0.0.1, 10 ]
    }
    w_norm => {
      one = [ 192.0.2.1, 10 ]
      two = [ 192.0.2.2, 10 ]
      three = [ 192.0.2.3, 10 ]
      four = [ 127.0.0.1, 10 ]
    }
  }
}
